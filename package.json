{
  "name": "tc-ui-toolkit",
  "version": "0.15.00",
  "description": "React components used to develop tools for the desktop app translationCore",
  "main": "dist/bundle.js",
  "display": "library",
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "eslint ./src && jest",
    "prestart": "npm run webpack:d",
    "start": "npm run render-ui",
    "render-ui": "webpack && cd tc-ui-toolkit-test && npm start",
    "setup": "npm ci && webpack && npm link && cd tc-ui-toolkit-test && npm ci && npm link tc-ui-toolkit",
    "prebuild": "rm -rf ./dist",
    "webpack:w": "webpack --watch",
    "webpack:d": "webpack -d",
    "build": "webpack -p",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build",
    "postpublish": "git tag v$npm_package_version && git push origin v$npm_package_version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/translationCoreApps/tc-ui-toolkit.git"
  },
  "keywords": [
    "translationCore",
    "UI",
    "toolkit"
  ],
  "author": "unfoldingWorld",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/translationCoreApps/tc-ui-toolkit/issues"
  },
  "homepage": "https://github.com/translationCoreApps/tc-ui-toolkit#readme",
  "engines": {
    "node": ">=6.11.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "testPathIgnorePatterns": [
      "tc-ui-toolkit-test/*"
    ],
    "rootDir": "./",
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "modulePathIgnorePatterns": [
      "tc-ui-toolkit-test/"
    ]
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "dependencies": {
    "@material-ui/core": "^3.8.3",
    "@material-ui/icons": "^3.0.2",
    "deep-equal": "^1.0.1",
    "jest-environment-jsdom": "^24.0.0",
    "lodash": "^4.17.5",
    "marked": "^0.6.2",
    "memoize-one": "^5.0.0",
    "prop-types": "^15.7.2",
    "react-bootstrap": "^0.32.1",
    "react-container-dimensions": "^1.3.3",
    "react-draggable": "^3.3.0",
    "react-remarkable": "^1.1.3",
    "react-tooltip": "^3.5.1",
    "string-punctuation-tokenizer": "^0.9.4",
    "usfm-js": "2.0.1",
    "word-aligner": "0.2.14"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-async-to-generator": "^7.0.0",
    "@babel/plugin-transform-regenerator": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-jest-hoist": "^24.9.0",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "file-loader": "^4.2.0",
    "jest": "^24.9.0",
    "jest-css-modules": "^2.1.0",
    "jest-enzyme": "^7.1.1",
    "ospath": "1.2.2",
    "path": "0.12.7",
    "prettier": "^1.18.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-test-renderer": "16.8.5",
    "style-loader": "^1.0.0",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9"
  }
}
