{
  "name": "tc-ui-toolkit",
  "version": "0.14.10",
  "description": "React components used to develop tools for the desktop app translationCore",
  "main": "dist/bundle.js",
  "display": "library",
  "scripts": {
    "test": "eslint ./src && jest",
    "start": "webpack --watch",
    "render-ui": "webpack && cd tc-ui-toolkit-test && npm start",
    "setup": "npm ci && webpack && npm link && cd tc-ui-toolkit-test && npm ci && npm link tc-ui-toolkit",
    "prebuild": "rm -rf ./dist",
    "build": "webpack -p",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build",
    "postpublish": "git tag v$npm_package_version && git push origin v$npm_package_version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/translationCoreApps/tc-ui-toolkit.git"
  },
  "keywords": [
    "translationCore",
    "UI",
    "toolkit"
  ],
  "author": "unfoldingWorld",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/translationCoreApps/tc-ui-toolkit/issues"
  },
  "homepage": "https://github.com/translationCoreApps/tc-ui-toolkit#readme",
  "engines": {
    "node": ">=6.11.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "setupFiles": [
      "./testSetUp/enzyme.js"
    ],
    "testPathIgnorePatterns": [
      "tc-ui-toolkit-test/*"
    ],
    "rootDir": "./",
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "modulePathIgnorePatterns": [
      "tc-ui-toolkit-test/"
    ]
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "dependencies": {
    "@material-ui/core": "^3.8.3",
    "@material-ui/icons": "^3.0.2",
    "deep-equal": "^1.0.1",
    "jest-environment-jsdom": "^24.0.0",
    "lodash": "^4.17.5",
    "memoize-one": "^5.0.0",
    "prop-types": "^15.6.1",
    "react-bootstrap": "^0.32.1",
    "react-container-dimensions": "^1.3.3",
    "react-remarkable": "^1.1.3",
    "react-tooltip": "^3.5.1",
    "string-punctuation-tokenizer": "^0.9.4",
    "usfm-js": "2.0.1",
    "word-aligner": "0.2.14"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-jest-hoist": "^23.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.11.1",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-react": "^7.12.0",
    "file-loader": "^3.0.1",
    "jest": "^23.6.0",
    "jest-css-modules": "^1.1.0",
    "jest-enzyme": "^7.0.1",
    "ospath": "1.2.2",
    "path": "0.12.7",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-test-renderer": "^16.7.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2"
  }
}
