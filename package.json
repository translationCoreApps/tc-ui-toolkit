{
  "name": "tc-ui-toolkit",
  "version": "0.10.12",
  "description": "React components used to develop tools for the desktop app translationCore",
  "main": "dist/bundle.js",
  "scripts": {
    "test": "eslint ./src && jest",
    "start": "webpack --watch",
    "render-ui": "webpack && cd tc-ui-toolkit-test && npm start",
    "setup": "npm i && webpack && npm link && cd tc-ui-toolkit-test && npm i && npm link tc-ui-toolkit",
    "prebuild": "rm -rf ./dist",
    "build": "webpack -p",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/translationCoreApps/tc-ui-toolkit.git"
  },
  "keywords": [
    "translationCore",
    "UI",
    "toolkit"
  ],
  "author": "unfoldingWorld",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/translationCoreApps/tc-ui-toolkit/issues"
  },
  "homepage": "https://github.com/translationCoreApps/tc-ui-toolkit#readme",
  "engines": {
    "node": ">=6.11.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "setupFiles": [
      "./testSetUp/enzyme.js"
    ],
    "testPathIgnorePatterns": [
      "tc-ui-toolkit-test/*"
    ],
    "rootDir": "./",
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "modulePathIgnorePatterns": [
      "tc-ui-toolkit-test/"
    ]
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "dependencies": {
    "@material-ui/core": "^1.2.0",
    "@material-ui/icons": "^1.0.0-beta.43",
    "deep-equal": "^1.0.1",
    "lodash": "^4.17.5",
    "prop-types": "^15.6.1",
    "react-bootstrap": "^0.32.1",
    "react-container-dimensions": "^1.3.3",
    "react-remarkable": "^1.1.3",
    "react-tooltip": "^3.5.1",
    "string-punctuation-tokenizer": "0.8.0",
    "usfm-js": "1.0.5",
    "word-aligner": "0.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-jest-hoist": "^23.2.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-react": "^7.9.1",
    "jest": "^22.4.3",
    "jest-css-modules": "^1.1.0",
    "jest-enzyme": "^6.0.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-test-renderer": "^16.3.2",
    "style-loader": "^0.20.3",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  }
}
